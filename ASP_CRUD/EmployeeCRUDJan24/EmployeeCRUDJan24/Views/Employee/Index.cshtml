@model List<EmployeeCRUDJan24.Models.Employee>
<h1>Employee Data</h1>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Email</th>
			<th>Date Of Join</th>
			<th>Designation</th>
			<th>Salary</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<!--retrieve all data from the Model-->
		@foreach(var employee in Model)
		{
		<tr>
			<td>@employee.Id</td>
			<td>@employee.Name</td>
			<td>@employee.Email</td>
			<td>@employee.DateOfJoin.ToString("dd-MM-yyyy")</td>
			<td>@employee.Designation</td>
			<td>@employee.Salary</td>
		
				<!--<td><a href="@Url.Action("View", "Employee", new { id = employee.Id })">View</a></td>	-->

			<td><a asp-controller="Employee" asp-action="View" asp-route-id="@employee.Id">View</a></td>


		</tr>
		}
	</tbody>
</table>