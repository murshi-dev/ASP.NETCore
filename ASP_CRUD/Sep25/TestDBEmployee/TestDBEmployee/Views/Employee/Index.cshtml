@model List<TestDBEmployee.Models.Employee>
<!--design a table to display records from MS SQL-->
<h1>Employee Details</h1>
<table class="table">
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>DateOfJoin</th>
		<th>Designation</th>
		<th>Salary</th>
		<th>Action</th>
	</tr>
	@foreach(var employee in Model)
	{
		<tr>
			<td>@employee.Name</td>
			<td>@employee.Email</td>
			<td>@employee.DateOfJoin</td>
			<td>@employee.Designation</td>
			<td>@employee.Salary</td>
			<!--create a link to edit record-->
			<td><a asp-controller="Employee" asp-action="View" 
				asp-route-id="@employee.Id">View</a></td>
		</tr>
	}
</table>