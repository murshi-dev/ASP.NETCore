@model ListMVC.Models.Product;
<!--form to delete the name and price-->
<h2>Delete Product</h2>
<form asp-action="DeleteConfirmed" method="post">

	<input type="hidden" asp-for="Id" />
	<div class="form-group">
		<label class="control-label">Product Name</label>
		<input class="form-control" asp-for="Name" readonly/>
	</div>
	<div class="form-group">
		<label class="control-label">Product Price</label>
		<input class="form-control" asp-for="Price" readonly />
	</div>
	<div class="form-group">
		<input type="submit" class="btn btn-secondary" value="Delete Item" />
	</div>
</form>